{
    "name": "confetti/ignition",
    "description": "A great unified error handler for PHP",
    "keywords": ["error-handler"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Quynh Nguyen",
            "email": "seriquynh@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "spatie/ignition": "^1.15",
        "symfony/error-handler": "^7.0",
        "symfony/http-foundation": "^7.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Confetti\\Ignition\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Confetti\\Ignition\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
